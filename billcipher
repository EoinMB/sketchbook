def setup():
    size(512, 512)
    colorMode(HSB)

    
def draw():
    fill(lerp(mouseX, mouseY, 3) , mouseX, mouseX)
    circle(256, 264, mouseX)
    fill(40, 255, 255)
    triangle(256, 128, 128, 384, 384, 384)
    fill(0, 0, 255)
    ellipse(256, 256, 72, mouseY/10)
    fill(0, 0, 0)
    circle(256, 256, mouseY/10)
